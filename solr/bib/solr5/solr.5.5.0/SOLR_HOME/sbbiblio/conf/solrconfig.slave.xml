     <lst name="defaults">
       <str name="echoParams">explicit</str>
       <str name="wt">json</str>
       <str name="indent">true</str>
       <str name="df">text</str>
     </lst>
  </requestHandler>



  <!--
    The export request handler is used to export full sorted result sets.
    Do not change these defaults.
  -->

