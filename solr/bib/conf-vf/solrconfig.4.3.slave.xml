    </searchComponent>

    <requestHandler name="/elevate"
                    class="org.apache.solr.handler.component.SearchHandler"
                    startup="lazy">
        <lst name="defaults">
            <str name="echoParams">explicit</str>
        </lst>
        <arr name="last-components">
            <str>elevator</str>
        </arr>
    </requestHandler>

